#!/bin/sh

MSG="running"
CMD=""

if [ -f vendor/bin/sail ]; then
    echo 'sail detected'
    CMD="sail" 
fi

if [ -f vite.config.js ]; then
    CMD="${CMD} npm run dev"
    echo "$CMD"
    $CMD
    exit 0
fi

if [ -f package-lock.json ]; then
    CMD="${CMD} npm run watch"
    echo "$CMD"
    $CMD
    exit 0
fi

if [ -f yarn.lock ]; then
    CMD="${CMD} yarn dev"
    echo "$CMD"
    $CMD
    exit 0
fi

if [ -f pnpm-lock.yaml ]; then
    CMD="${CMD} pnpm run watch"
    echo "$CMD"
    $CMD
    exit 0
fi

echo ' Node package not detected'
